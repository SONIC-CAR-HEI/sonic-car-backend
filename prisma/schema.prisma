generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          String        @id @default(uuid())
  brand       String
  model       String
  price       Float
  engineType  EngineType
  available   Boolean?      @default(true)
  fav         Boolean?      @default(false)
  type        Type          @relation(fields: [typeId], references: [id])
  typeId      String
  apointement Appointment[]
  images      Image[]
}

enum EngineType {
  DIESEL
  HYBRID
  ELECTRIC
  GASOLINE
}

model Type {
  id          String @id @default(uuid())
  name        String
  description String
  cars        Car[]
}

enum AppointmentStatus {
  PENDING
  ARCHIVED
  REJECTED
  ACCEPTED
}

model Appointment {
  id         String            @id @default(uuid())
  status     AppointmentStatus
  firstName  String
  lastName   String
  email      String
  tel        String
  date       DateTime          @default(now())
  approvedBy Admin?            @relation(fields: [adminId], references: [id])
  carId      String
  car        Car               @relation(fields: [carId], references: [id])
  adminId    String?
}

model Admin {
  id                    String        @id @default(uuid())
  firstName             String
  lastName              String
  email                 String
  password              String
  approvedAppointements Appointment[]
}

model Image {
  id       String @id @default(uuid())
  imageUrl String
  car      Car    @relation(fields: [carId], references: [id])
  carId    String
}
